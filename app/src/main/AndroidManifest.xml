<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tech.arcent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".appinit.ArcentApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launch"
        android:roundIcon="@mipmap/ic_launch_round"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/Theme.Arcent">
        <!-- disable sentry auto provider init so blank DSN does not crash; we do manual init in ArcentApp -->
        <meta-data android:name="io.sentry.auto-init" android:value="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.arcent.ui.splash.LegacySplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Arcent.Splash"></activity>
    </application>

</manifest>